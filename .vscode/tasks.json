{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: watch",
      "type": "shell",
      "command": "npx",
      "args": ["tsc", "--watch", "--noEmit"],
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "never"
      },
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "shared"
      },
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "npm",
      "script": "pretest",
      "group": "test",
      "presentation": {
        "panel": "shared"
      }
    }
  ]
}